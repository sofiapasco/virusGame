generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Room {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  name      String      @unique
  users     User[]
}

model User {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  nickname  String
  roomId    String      @db.ObjectId
  scores    Int[]
  socketId  String      
  room      Room        @relation(fields: [roomId], references: [id])
}

model MatchResult {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  winner    String
  loser     String
  gameTime  Int      // Antalet sekunder för matchens speltid
  createdAt DateTime @default(now())
}

model Match {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  playerOne String   // AnvändarID eller nickname för spelare ett
  playerTwo String   // AnvändarID eller nickname för spelare två
  winner    String?  // AnvändarID eller nickname för vinnaren, null om oavgjort
  scores    Json     // JSON-sträng med poäng för varje runda, exempel: [{playerOne: 250, playerTwo: 300}, ...]
  createdAt DateTime @default(now())
}

model Highscore {
  id                String      @id @default(auto()) @map("_id") @db.ObjectId
  nickname          String     @unique
  averageReactionMs Float
}