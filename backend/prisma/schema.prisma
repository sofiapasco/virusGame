generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  nickname String
  scores   Int[]
}

model Room {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
}

model MatchResult {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  winner    String
  loser     String
  gameTime  Int      // Antalet sekunder f√∂r matchens speltid
  createdAt DateTime @default(now())
}